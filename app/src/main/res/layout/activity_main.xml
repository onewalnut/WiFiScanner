<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open MAC Filter (Filter is read from config file)">
        </TextView>

        <Switch
            android:id="@+id/switch_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="On"
            android:textOff="Off"
            android:showText="true"
            android:checked="true">

        </Switch>

    </LinearLayout>

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordinate X :   " />

        <EditText
            android:id="@+id/edt_coordinateX"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Button
            android:id="@+id/Xsub"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:onClick="Xsub"
            android:text="-"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/Xadd"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="Xadd"
            android:layout_marginLeft="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordinate Y :   " />

        <EditText
            android:id="@+id/edt_coordinateY"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Button
            android:id="@+id/Ysub"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="Ysub"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/Yadd"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="Yadd"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Interval:"/>
        <EditText
            android:id="@+id/edt_scan_interval"
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Times:   "/>
        <EditText
            android:id="@+id/edt_scan_time"
            android:text="10"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Button to Start Scanning"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    </TextView>

    <Button
        android:id="@+id/bt_scan"
        android:text="Wi-Fi Scan"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>


</LinearLayout>